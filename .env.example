# 服务器配置
PORT=3000
HOST=localhost

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/server.log

# WebSocket配置
WEBSOCKET_HEARTBEAT_INTERVAL=30000
WEBSOCKET_TIMEOUT=60000

# 数据存储配置
MAX_SENSOR_DATA=1000
DEVICE_CLEANUP_INTERVAL=3600000

# 安全配置
API_KEY=
SECRET_KEY=

# 数据库配置（如果需要持久化存储）
DATABASE_URL=
REDIS_URL=

# 其他配置
NODE_ENV=development

# 声纹识别配置（可选）
# VOICEPRINT_URL=https://your-voiceprint-api.com?key=your-api-key
# VOICEPRINT_SPEAKERS=speaker_001,张三,主人|speaker_002,李四,家人
# VOICEPRINT_THRESHOLD=0.4

# Qdrant 向量数据库配置
RAG_ENABLED=false
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=knowledge_base

# Embedding 配置
EMBEDDING_PROVIDER=openai
EMBEDDING_BASE_URL=                          # 自定义 Embedding 服务地址（如你的 agent 服务）
OPENAI_API_KEY=
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# RAG 搜索配置
RAG_SEARCH_LIMIT=5
RAG_SCORE_THRESHOLD=0.7